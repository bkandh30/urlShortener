generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id         String    @id @default(cuid())
  shortId    String    @unique
  longUrl    String
  clicks     Int       @default(0)
  createdAt  DateTime  @default(now())
  lastAccess DateTime?
  expiresAt  DateTime

  clicks_detail Click[]

  @@index([shortId])
  @@index([expiresAt])
}

model Click {
  id        String   @id @default(cuid())
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  ipHash    String?
  userAgent String?
  referrer  String?

  @@index([linkId])
}
